# Atlas Photogrammetry API - Example Environment Variables

# Application Environment
APP_ENV=development
DEBUG=true

# API Authentication
API_KEY=YOUR_API_KEY_HERE

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Storage Configuration
STORAGE_ROOT=./storage
WORKSPACE_TTL_HOURS=2

# Upload Limits
MAX_IMAGES=20
MIN_IMAGES=5
MAX_UPLOAD_MB=2048

# Processing Configuration
ENABLE_SAM_SEGMENTATION=true
SAM_MODEL_TYPE=vit_h
SAM_CHECKPOINT_PATH=/sam_vit_h_4b8939.pth
SAM_DEVICE=cpu
PHOTOGRAMMETRY_QUALITY=medium
TARGET_TRIANGLE_COUNT=100000
MAX_TEXTURE_SIZE=2048

# Pipeline Configuration
GLOMAP_ENABLED=true
OPENMVS_ENABLED=true
COLMAP_BACKUP=false

# CORS Configuration
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,DELETE
CORS_ALLOW_HEADERS=*

# Docker Images
OPENMVG_DOCKER_IMAGE=openmvg:latest
OPENMVS_DOCKER_IMAGE=openmvs/openmvs-ubuntu:latest
